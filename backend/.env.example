# Copy this file to .env. Set MYSQL_PASSWORD if your root user has a password; leave empty if no password.

# Option 1: Full URL (no password: mysql://root@localhost:3306/hoteldb)
# DATABASE_URL=mysql://root@localhost:3306/hoteldb

# Option 2: Separate variables (leave MYSQL_PASSWORD empty for no password)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=hoteldb
